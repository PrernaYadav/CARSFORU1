<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="301.5dp"
            android:layout_height="107dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fullsizerender" />

        <!--  <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">-->
        <EditText
            android:id="@+id/editText_Email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="27.5dp"
            android:backgroundTint="@color/AppColor"
            android:drawableLeft="@drawable/envelope"
            android:drawablePadding="20dp"
            android:gravity="top"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/AppColor"
            android:textColorHint="@color/TextHintColor"
            android:textCursorDrawable="@color/AppColor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_Password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10.5dp"
            android:backgroundTint="@color/AppColor"
            android:drawableLeft="@drawable/icons8password"
            android:drawablePadding="28dp"
            android:gravity="top"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/AppColor"
            android:textColorHint="@color/TextHintColor"
            android:textCursorDrawable="@color/AppColor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_PAN_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10.5dp"
            android:backgroundTint="@color/AppColor"
            android:drawableLeft="@drawable/icons8warningshield"
            android:drawablePadding="28dp"
            android:gravity="top"
            android:hint="PAN Number (Optional)"
            android:maxLength="16"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/AppColor"
            android:textColorHint="@color/TextHintColor"
            android:textCursorDrawable="@color/AppColor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10.5dp"
            android:backgroundTint="@color/AppColor"
            android:drawableLeft="@mipmap/mobile"
            android:drawablePadding="28dp"
            android:gravity="top"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/AppColor"
            android:textColorHint="@color/TextHintColor"
            android:textCursorDrawable="@color/AppColor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10.5dp"
            android:backgroundTint="@color/AppColor"
            android:drawableLeft="@drawable/icons8marker"
            android:drawablePadding="28dp"
            android:gravity="top"
            android:hint="Location"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/AppColor"
            android:textColorHint="@color/TextHintColor"
            android:textCursorDrawable="@color/AppColor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_car_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10.5dp"
            android:backgroundTint="@color/AppColor"
            android:drawableLeft="@drawable/icons8marker"
            android:drawablePadding="28dp"
            android:gravity="top"
            android:hint="Car Preference"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/AppColor"
            android:textColorHint="@color/TextHintColor"
            android:textCursorDrawable="@color/AppColor"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_signup"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_round_corner"
            android:foreground="?attr/selectableItemBackground"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <!--  </LinearLayout>-->


    </LinearLayout>
</ScrollView>