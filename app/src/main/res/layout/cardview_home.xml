<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car ID "
                android:textColor="@color/AppColor"/>
            <TextView
                android:id="@+id/userscurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39 "
                android:layout_marginLeft="10dp"
                android:textColor="@color/AppColor"/>
        </LinearLayout>

    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Hyundai i20 vtech"
        android:textColor="@color/AppColor"/>
    <TextView
        android:id="@+id/carFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diesel"
        android:layout_marginTop="10dp"

        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/carKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000Km"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/carLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gurgaon"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/carModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2011 Model"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/carTransmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatic"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/countdownTimer"
            android:text="time"
            android:textColor="@color/AppColor"
            android:layout_gravity="center"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/carImagecurrent"
            android:layout_width="157.5dp"
            android:layout_marginTop="10dp"
            android:layout_height="97dp"
            android:src="@drawable/carsforuappicon"            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT BID:INR  "
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
            <TextView
                android:id="@+id/currentbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200000"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAX BID:INR  "
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
            <TextView
                android:id="@+id/maxbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200000"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
        </LinearLayout>


    </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/startbidding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START BIDDING"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>