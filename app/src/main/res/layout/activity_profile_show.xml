<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/profile"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/avatar"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michelle Hale"
        android:textAllCaps="false"
        android:textColor="#FF424B54"
        android:textSize="22dp"
        android:background= "@android:color/transparent"
        android:layout_marginTop="10dp"
     android:layout_gravity="center"
        android:id="@+id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Francisco, California"
        android:textAllCaps="false"
        android:textColor="#FF93A8AC"
        android:textSize="15dp"
        android:id="@+id/address"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preference"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="15dp"
android:gravity="left"
        android:id="@+id/pref"
        android:layout_gravity="left"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="4W"
        android:textAllCaps="false"
        android:textColor="#FF424B54"
   
        android:textSize="15dp"
        android:background= "@android:color/transparent"
       android:gravity="center"
android:paddingLeft="70dp"
        android:id="@+id/wheeler"
      android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="15dp"
   android:gravity="right"
        android:paddingLeft="90dp"
        android:id="@+id/edit"
        android:layout_gravity="right"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textAllCaps="false"
            android:id="@+id/location"
            android:textColor="@color/profile"
            android:textSize="15dp"
            android:gravity="left"
            android:layout_gravity="left"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gurgaon"
            android:textAllCaps="false"
            android:textColor="#FF424B54"
            android:textSize="15dp"
            android:id="@+id/location1"
            
            android:background= "@android:color/transparent"
            android:gravity="center_horizontal"
            android:paddingLeft="85dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textAllCaps="false"
            android:id="@+id/password"
            android:textColor="@color/profile"
            android:textSize="15dp"
            android:gravity="left"
            android:layout_gravity="left"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#FF424B54"
            android:textSize="15dp"
            android:id="@+id/password1"
            android:gravity="center_horizontal"
            
            android:background= "@android:color/transparent"
            android:paddingLeft="75dp"
            android:inputType="textPassword"
            android:minEms="8"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textAllCaps="false"
            android:id="@+id/mobile"
            android:textColor="@color/profile"
            android:textSize="15dp"
            android:gravity="left"
            android:layout_gravity="left"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-9999999999"
            android:textAllCaps="false"
            android:textColor="#FF424B54"
            android:id="@+id/mobile1"
            android:textSize="15dp"
            android:background= "@android:color/transparent"
            android:maxLength="10"
            android:gravity="center_horizontal"
            android:paddingLeft="38dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAN"
            android:textAllCaps="false"
            android:id="@+id/pan"
            android:textColor="@color/profile"
            android:textSize="15dp"
            android:gravity="left"
            android:layout_gravity="left"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AFPO768452"
            android:textAllCaps="false"
            android:textColor="#FF424B54"
            android:id="@+id/pan1"
            android:background= "@android:color/transparent"
            
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:paddingLeft="115dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:textAllCaps="false"
            android:textColor="@color/profile"
            android:textSize="15dp"
            android:gravity="left"
            android:id="@+id/email"
            android:layout_gravity="left"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rajmalhotr@gmail.com"
            android:textAllCaps="false"
            android:id="@+id/email1"
            android:textColor="#FF424B54"
            android:textSize="15dp"
            android:background= "@android:color/transparent"
            
            android:gravity="center_horizontal"
            android:paddingLeft="80dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/button_logout"
            android:text="Logout"
android:textAllCaps="false"
            android:id="@+id/logout"
            android:textSize="20dp"
            android:textColor="@color/white"

            style="?android:attr/borderlessButtonStyle"
            />


    </LinearLayout>
</ScrollView>