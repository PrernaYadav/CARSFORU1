<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical"
    android:background="#FFF9FFF3"
    android:backgroundTint="#FFF9FFF3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/carName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyundai i20 vtech"
                android:textColor="@color/AppColor"/>
            <TextView
                android:id="@+id/carFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diesel"
                android:layout_marginTop="10dp"

                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/carKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000Km"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/carLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gurgaon"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/carModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2011 Model"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/carTransmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/carImage"
                android:layout_width="157.5dp"
                android:layout_height="97dp"
                android:src="@drawable/carsforuappicon"
                />
            <TextView
                android:id="@+id/currentbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT BID: 2,00,000 INR"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
            <TextView
                android:id="@+id/raiseby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAISE BY: 50,000 INR"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startbidding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOU WON THIS BID"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="BIDDING OVER FOR THIS PRODUCT"
            android:textColor="@color/AppColor"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>