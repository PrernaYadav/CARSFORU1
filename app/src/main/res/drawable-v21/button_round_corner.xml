<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/AppColor" />
            <gradient android:angle="-90" android:startColor="@color/AppColor" android:endColor="@color/AppColor"  />

        </shape>

    </item>
    <ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/green">
        <item android:id="@android:id/mask">
            <shape android:shape="oval">
                <solid android:color="@color/green"/>
            </shape>
            <color android:color="@color/green"/>
        </item>
    </ripple>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/AppColor" />
            <solid android:color="@color/AppColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/AppColor" />
            <gradient android:angle="-90" android:startColor="@color/AppColor" android:endColor="@color/AppColor" />
        </shape>
    </item>


</selector>
